<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ebook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:supportsRtl="true"
        android:allowBackup="true"
        android:icon="@drawable/ebook_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.ebook.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="com.example.ebook.TblOfContent"
            android:label="@string/app_name" >
        </activity>
        
        <activity 
            android:name="com.example.ebook.BookContent"
            android:label="@string/app_name" >
        </activity>
        
        <activity 
            android:name="com.example.ebook.TblOfFavoriteBooks"
            android:label="@string/app_name" >
        </activity>
        
        <activity 
            android:name="com.example.ebook.Search"
            android:label="@string/app_name" >
        </activity>
        
    </application>

</manifest>
